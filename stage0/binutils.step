name=binutils
version=2.37
source1="https://ftp.gnu.org/gnu/binutils/${name}-${version}.tar.bz2"

build() {
  cd binutils-*

  step_msg "Setting up enviroment variables..."

  export PATH="${STRAP_INSTALL}/usr/bin:$PATH"
  export CC="gcc"
  export CXX="g++"
  export CFLAGS="-O2"
  export CXXFLAGS="-O2"

  step_msg "Configuring ${name}"

  mkdir build && pushd build
  ../configure --prefix=/usr/binutils \
    --target="${STRAP_TRIPLET_FULL}" \
    --with-sysroot="${STRAP_INSTALL}" \
    --libdir=/usr/lib \
    --includedir=/usr/include \
    --disable-multilib \
    --enable-deterministic-archives \
    --enable-plugins \
    --enable-lto \
    --disable-shared \
    --enable-static \
    --enable-ld=default \
    --enable-secureplt \
    --enable-64-bit-bfd

  step_msg "Building ${name}"
  make -j "${STRAP_BUILD_JOBS}" tooldir=/usr/binutils

  step_msg "Installing ${name}"
  make -j "${STRAP_BUILD_JOBS}" tooldir=/usr/binutils install DESTDIR="${STRAP_INSTALL}"

}
